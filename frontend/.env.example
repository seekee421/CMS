# 前端项目环境变量配置示例
# 复制此文件为 .env.local 并根据实际情况修改配置

# ===========================================
# 通用配置
# ===========================================

# 环境类型 (development | staging | production)
NODE_ENV=development

# API基础URL
API_BASE_URL=http://localhost:8080

# 应用基础URL
APP_BASE_URL=http://localhost:3000

# ===========================================
# 管理后台配置 (admin/.env.local)
# ===========================================

# 应用标题
VITE_APP_TITLE=CMS管理后台

# API基础URL
VITE_API_BASE_URL=http://localhost:8080

# 上传文件大小限制 (MB)
VITE_MAX_FILE_SIZE=20

# 是否启用开发工具
VITE_ENABLE_DEV_TOOLS=true

# 是否启用Mock数据
VITE_ENABLE_MOCK=false

# 认证Token存储键名
VITE_AUTH_TOKEN_KEY=cms_admin_token

# 刷新Token存储键名
VITE_REFRESH_TOKEN_KEY=cms_admin_refresh_token

# Token过期时间 (小时)
VITE_TOKEN_EXPIRE_HOURS=24

# 是否启用记住登录状态
VITE_ENABLE_REMEMBER_LOGIN=true

# 默认语言
VITE_DEFAULT_LOCALE=zh-CN

# 支持的语言列表
VITE_SUPPORTED_LOCALES=zh-CN,en-US

# 主题配置
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# 分页配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# 编辑器配置
VITE_EDITOR_THEME=vs-dark
VITE_EDITOR_AUTO_SAVE_INTERVAL=30000

# 图表配置
VITE_CHART_THEME=default
VITE_CHART_ANIMATION=true

# ===========================================
# 文档门户配置 (docs-portal/.env.local)
# ===========================================

# API基础URL
API_BASE_URL=http://localhost:8080

# 是否启用分析统计
ENABLE_ANALYTICS=true

# 是否启用反馈功能
ENABLE_FEEDBACK=true

# 是否启用搜索功能
ENABLE_SEARCH=true

# 搜索服务类型 (algolia | local)
SEARCH_TYPE=local

# Algolia搜索配置 (如果使用Algolia)
ALGOLIA_APP_ID=your_app_id
ALGOLIA_API_KEY=your_api_key
ALGOLIA_INDEX_NAME=cms_docs

# 默认语言
DEFAULT_LOCALE=zh-CN

# 支持的语言列表
SUPPORTED_LOCALES=zh-CN,en

# 默认产品版本
DEFAULT_VERSION=latest

# 是否启用版本选择
ENABLE_VERSION_SELECTOR=true

# 是否启用下载统计
ENABLE_DOWNLOAD_TRACKING=true

# 反馈邮箱
FEEDBACK_EMAIL=feedback@example.com

# 社交媒体链接
SOCIAL_GITHUB=https://github.com/your-org
SOCIAL_TWITTER=https://twitter.com/your-org
SOCIAL_LINKEDIN=https://linkedin.com/company/your-org

# 网站信息
SITE_TITLE=CMS文档中心
SITE_DESCRIPTION=专业的内容管理系统文档
SITE_KEYWORDS=CMS,文档,API,教程

# SEO配置
ENABLE_SEO=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SITE_VERIFICATION=your_verification_code

# PWA配置
ENABLE_PWA=true
PWA_THEME_COLOR=#2e8555
PWA_BACKGROUND_COLOR=#ffffff

# ===========================================
# 开发环境配置
# ===========================================

# 是否启用热重载
ENABLE_HOT_RELOAD=true

# 是否启用源码映射
ENABLE_SOURCE_MAP=true

# 是否启用Bundle分析
ENABLE_BUNDLE_ANALYZER=false

# 开发服务器端口
DEV_SERVER_PORT=3000
DOCS_SERVER_PORT=3001

# 是否自动打开浏览器
AUTO_OPEN_BROWSER=true

# 代理超时时间 (毫秒)
PROXY_TIMEOUT=30000

# ===========================================
# 生产环境配置
# ===========================================

# 是否启用压缩
ENABLE_COMPRESSION=true

# 是否启用缓存
ENABLE_CACHE=true

# CDN基础URL
CDN_BASE_URL=https://cdn.example.com

# 静态资源版本号
ASSETS_VERSION=1.0.0

# 是否启用错误监控
ENABLE_ERROR_MONITORING=true

# 错误监控服务URL
ERROR_MONITORING_URL=https://sentry.io/your-project

# ===========================================
# 安全配置
# ===========================================

# CORS允许的域名
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# CSP配置
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# 是否启用HTTPS重定向
ENABLE_HTTPS_REDIRECT=false

# ===========================================
# 缓存配置
# ===========================================

# 静态资源缓存时间 (秒)
STATIC_CACHE_MAX_AGE=31536000

# API缓存时间 (秒)
API_CACHE_MAX_AGE=300

# 页面缓存时间 (秒)
PAGE_CACHE_MAX_AGE=3600

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (error | warn | info | debug)
LOG_LEVEL=info

# 是否启用控制台日志
ENABLE_CONSOLE_LOG=true

# 是否启用文件日志
ENABLE_FILE_LOG=false

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# ===========================================
# 监控配置
# ===========================================

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=true

# 性能监控采样率
PERFORMANCE_SAMPLE_RATE=0.1

# 是否启用用户行为分析
ENABLE_USER_ANALYTICS=true

# 分析数据上报间隔 (毫秒)
ANALYTICS_REPORT_INTERVAL=60000